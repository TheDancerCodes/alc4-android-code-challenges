<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ProfileActivity"
        tools:showIn="@layout/activity_profile">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

        <TextView
                style="@style/headerText"
                android:fontFamily="@font/proxima_nova_thin"
                android:text="TheDancerCodes Profile"
                android:layout_marginBottom="20dp"/>

        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                    android:id="@+id/nameImageView"
                    android:src="@drawable/ic_library_books_black_24dp"
                    style="@style/profileDetailsImage"/>

            <TextView
                    android:id="@+id/nameTextView"
                    android:text="Track"
                    android:layout_toRightOf="@id/nameImageView"
                    android:fontFamily="@font/proxima_nova_bold"
                    style="@style/profileDetailsTextMain"/>

            <TextView
                    android:text="Android"
                    android:layout_toRightOf="@id/nameImageView"
                    android:fontFamily="@font/proxima_nova_thin"
                    style="@style/profileDetailsMiniText"/>

        </RelativeLayout>

        <View style="@style/profileDetailsView"/>
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                    android:id="@+id/mobileImageView"
                    android:src="@drawable/ic_place_black_24dp"
                    style="@style/profileDetailsImage"/>

            <TextView
                    android:text="Country"
                    android:layout_toRightOf="@id/mobileImageView"
                    android:fontFamily="@font/proxima_nova_bold"
                    style="@style/profileDetailsTextMain"/>

            <TextView
                    android:text="Kenya"
                    android:layout_toRightOf="@id/mobileImageView"
                    android:fontFamily="@font/proxima_nova_thin"
                    style="@style/profileDetailsMiniText"/>

        </RelativeLayout>

        <View style="@style/profileDetailsView"/>
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                    android:id="@+id/emailImageView"
                    android:src="@drawable/ic_email_black_24dp"
                    style="@style/profileDetailsImage"/>

            <TextView
                    android:text="Email"
                    android:layout_toRightOf="@id/emailImageView"
                    android:fontFamily="@font/proxima_nova_bold"
                    style="@style/profileDetailsTextMain"/>

            <TextView
                    android:text="thedancercodes@dance.com"
                    android:layout_toRightOf="@id/emailImageView"
                    android:fontFamily="@font/proxima_nova_thin"
                    style="@style/profileDetailsMiniText"/>

        </RelativeLayout>

        <View style="@style/profileDetailsView"/>
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                    android:id="@+id/addressImageView"
                    android:src="@drawable/ic_phone_android_black_24dp"
                    style="@style/profileDetailsImage"/>

            <TextView
                    android:text="Phone Number"
                    android:layout_toRightOf="@id/addressImageView"
                    android:fontFamily="@font/proxima_nova_bold"
                    style="@style/profileDetailsTextMain"/>

            <TextView
                    android:text="+254720123256"
                    android:layout_toRightOf="@id/addressImageView"
                    android:fontFamily="@font/proxima_nova_thin"
                    style="@style/profileDetailsMiniText"/>

        </RelativeLayout>

        <View style="@style/profileDetailsView"/>
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                    android:id="@+id/dobImageView"
                    android:src="@drawable/ic_laptop_black_24dp"
                    style="@style/profileDetailsImage"/>

            <TextView
                    android:text="Slack Username"
                    android:layout_toRightOf="@id/dobImageView"
                    android:fontFamily="@font/proxima_nova_bold"
                    style="@style/profileDetailsTextMain"/>

            <TextView
                    android:text="TheDancerCodes"
                    android:layout_toRightOf="@id/dobImageView"
                    android:fontFamily="@font/proxima_nova_thin"
                    style="@style/profileDetailsMiniText"/>

        </RelativeLayout>

        <View style="@style/profileDetailsView"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
